<endpoint>
    <name>Submit Subscription Request</name>
    <description>Subscribe an agency to an HMRC service</description>
    <section id="resource">
        <title>Resource</title>
        <resource>POST /agencies/subscriptions</resource>
    </section>
    <section id="authorisation">
        <title>Authorisation</title>
        <authorisation>
            <type>USER</type>
            <scope>write:subscriptions</scope>
        </authorisation>
    </section>
    <section id="content-types">
        <title>Accepted Media Types</title>
        <list>
            <item>
                <code>application/vnd.hmrc.1.0+json</code>
            </item>
        </list>
    </section>
    <section id="sample-response">
        <title>Response</title>
        <httpStatus>202 (Accepted)</httpStatus>
    </section>
    <section id="error-responses">
        <title>Error Scenarios</title>
        <table>
            <headings>
                <cell>Error Scenario</cell>
                <cell>HTTP Status</cell>
                <cell>Code</cell>
            </headings>
            <rows>
                <row>
                    <cell>Not logged in</cell>
                    <cell><code>401 (Unauthorised)</code></cell>
                    <cell><code>The agency must be logged-in to use this resource</code></cell>
                </row>
            </rows>
        </table>
    </section>
</endpoint>
