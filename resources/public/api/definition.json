        "authType": "USER",
        "throttlingTier": "UNLIMITED",
        "scope": "write:subscriptions"
      }, {
        "uriPattern": "/agencies/subscriptions/{id}",
        "endpointName": "Get Subscription Request",
        "method": "GET",
        "authType": "USER",
        "throttlingTier": "UNLIMITED",
        "scope": "read:subscriptions"
      }]
    }]
  }
